extends layout

block content
  .row.stuff
    .col-xs-12.col-sm-10.col-sm-offset-1
      h1 Make a new poll!
      form(action="/newpoll", method="post", role="form")
        .form-group
          label(for='usr') Title:
          input#usr.form-control(name='title')
        .form-group
          label(for='comment') Comment:
          textarea#comment.form-control(rows='5', name="options")
        button.btn.btn-primary(type='submit') Make!
